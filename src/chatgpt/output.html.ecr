%><!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>MonopolyGPT</title>
    <style>
      :root {
        --bg-color-human: rgb(52 53 65);
        --bg-color-gpt: rgb(72 73 88);
        --font-color: rgb(243 244 246);
        --r0: 0rem;
        --r1: 0.25rem;
        --r2: 0.5rem;
        --r3: 1rem;
        --r4: 1.5rem;
        --r5: 3rem;
        --message-width: 800px;
        --view-width: calc(100vw - calc(100vw - 100%));
      }

      html,
      body {
        width: var(--view-width);
        height: 100vh;
        margin: 0;
        padding: 0;
      }

      main {
        min-height: 100vh;
        display: flex;
        flex-flow: column;
        justify-content: flex-start;
        background-color: var(--bg-color-human);
        color: var(--font-color);
      }

      .row {
        max-width: 100%;
      }

      .row:nth-child(2n) {
        background-color: var(--bg-color-gpt);
      }

      .message {
        margin-left: auto;
        margin-right: auto;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 4px;
        padding-right: 4px;
        white-space: pre-wrap;
        display: flex;
        justify-content: center;
      }

      @media (max-width: 800px) {
        .message {
          min-width: 80%;
          max-width: 80%;
        }
      }

      @media (min-width: 800px) {
        .message {
          min-width: calc(800px * 0.9);
          max-width: calc(800px * 0.9);
        }
      }

      .message:first-child {
        margin-top: var(--r5);
      }

      .message:last-child {
        margin-bottom: auto;
      }

      .avatar {
        order: 0;
        width: 28px;
        height: 28px;
        margin: 0;
        margin-left: 20px;
        margin-right: 20px;
        padding: 0;
        border: 0;
        background-size: contain;
        min-width: 28px;
      }

      .avatar.human {
        background-image: url("data:image/jpeg;base64,");
        background-size: 28px;
      }

      .avatar.gpt {
        background-image: url("data:image/svg+xml;base64,");
        background-color: rgb(16, 163, 127);
        background-size: 20px;
        background-repeat: no-repeat;
        background-position: center;
      }

      .from {
        width: 100%;
        padding-bottom: var(--r4);
        margin: 0;
        margin-left: var(--r4);
        display: flex;
        flex-flow: column;
        justify-content: flex-start;
      }

      .to {
        width: 100%;
        padding-bottom: var(--r4);
        margin: 0;
        margin-left: var(--r4);
        border-color: var(--bg-color-gpt);
        display: flex;
        flex-flow: column;
        justify-content: flex-start;
      }

      .from > p,
      .to > p {
        margin-top: 0;
        max-width: 100%;
      }
    </style>
  </head>

  <body
    cz-shortcut-listen="true"
    data-new-gr-c-s-check-loaded="8.905.0"
    data-gr-ext-installed=""
  >
    <main>
      <%- @messages.each do |message| -%>
      <div class="row">
        <div class="message">
          <div class="<%= message.avatar_class %>"></div>
            <div class="from">
              <p><%= message.content %></p>
            </div>
          </div>
        </div>
      </div>
      <%- end -%>
    </main>
  </body>
</html>
